<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dip"
    app:behavior_hideable="true"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".BookListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:foregroundTint="@android:color/primary_text_dark">

        <TextView
            android:id="@+id/sheetTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="title"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_dark" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:id="@+id/searchButton"
            android:contentDescription="edit"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_edit"
            android:id="@+id/editButton"
            android:contentDescription="edit"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="Roaches have no kings by Georges Orwell"
        android:textAppearance="@style/AppTheme.TextAppearance.Large"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="end"
        android:textAppearance="@style/AppTheme.TextAppearance"
        android:text="Read on xxxx"/>

    <View
        android:layout_width="match_parent"
        android:background="@drawable/bottom_border_gradient"
        android:layout_height="5dp" />
    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="@style/AppTheme.TextAppearance"
        android:text="Notes: dsafjldsaÃ©flk jaf "/>
</LinearLayout>